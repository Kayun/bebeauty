.card
	margin: 0 auto
	width: 600px

	&-header
		margin-bottom: 15px

	&__avatar
		display: inline-block
		size(rem(60px))
		overflow: hidden
		rounded()
		background-color: #cccccc

		img
			width: 100%

	&__title
		line-height: rem(60px)
		margin-right: 180px
		margin-left: 80px
		vertical-align: top

		span
			line-height: rem(30px)
			display: inline-block


	&__row
		padding: 15px 0
