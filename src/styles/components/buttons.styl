.button
	padding: 0 30px
	display: inline-block
	fs: rem(12px)
	line-height: rem(40px)
	text-align: center
	border: none
	background-color: $green
	cursor: pointer
	font-weight: 700
	color: #fff
	text-decoration: none
	rounded()
	no-select()
	transition: all .3s ease
	hover-lighten: 10%

	& + &
		margin-left: 15px

	&:active
		background-color: lighten($green, 5%)
		box-shadow: inset 1px 1px 2px rgba(0, 0, 0, .2), 1px 1px 1px rgba(0, 0, 0, .2)
		
	&_color
		
		&_red
			background-color: $red
			hover-lighten: 10%
			
	&_size
	
		&_small
			padding: 0 10px
			line-height: rem(30px)

	&_width

		&_170
			width: rem(170px)

		&_90
			width: rem(90px)
