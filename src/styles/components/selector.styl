.selector
	display: inline-block
	fs: 0;
	transition: opacity .3s ease

	&__label
		line-height: rem(30px)
		vertical-align: top
		color: #a09db7
		museo-r()
		fs: rem(12px)
		no-select()
		cursor: pointer
		transition: color .3s ease
		hover-color: $font-color true

		&_state_active
			color: $font-color

	&__button
		relative()
		margin: 0 rem(15px)
		size(rem(60px), rem(30px))
		display: inline-block
		background-color: #f3f2f9
		vertical-align: top
		rounded()
		cursor: pointer
		transition: box-shadow .3s ease

		&:hover
			box-shadow: inset 0 0 3px rgba($font-color, .25)

		&:before
			absolute: top rem(3px) left rem(3px)
			size(rem(24px))
			content: ''
			background-color: $green
			rounded()
			transition: transform .3s ease

		&_position_right

			&:before
				transform: translateX(calc(100% + 6px))

	&__input
		position: absolute
		opacity: 0
		z-index: -1
