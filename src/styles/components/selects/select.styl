.sm-select
	position: relative
	display: inline-block
	width: 200px
	b: 1px solid #000
	text-align: left

	&_state_open
		background-color: #cccccc

	&__target
		position: absolute
		z-index: -1
		opacity: 0

	&__button
		width: 100px
		background-color: transparent

	&__plc
		color: red

		&_state_hidden
			display: none

	&-dropdown
		display: none

		&_state_open
			display: block

